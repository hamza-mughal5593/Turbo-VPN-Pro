<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".UI.Feedback.FeedbackActivity">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/tool_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/blue"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20sdp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/back_btn"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="3.3sp"
                    android:text="Submit Feedback"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="17.3sp"
                    android:textStyle="normal" />

            </RelativeLayout>


        </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/_20sdp">
    <TextView
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="13.3sp"
        android:textColor="#1c275b"
        android:lineSpacingExtra="2.7sp"
        android:text="Subject : Can&apos;t connect"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="13.3sp"
        android:textColor="#1c275b"
        android:lineSpacingExtra="2.7sp"
        android:text="Email"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:background="@drawable/ed_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <EditText

            android:paddingHorizontal="@dimen/_15sdp"
            android:textColorHint="@color/hint_color"
            android:hint="Your email address"
            android:textSize="13.3sp"
            android:textColor="#1c275b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="13.3sp"
        android:textColor="#1c275b"
        android:lineSpacingExtra="2.7sp"
        android:text="Description"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/ed_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">

        <EditText
android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:textColorHint="@color/hint_color"
            android:hint="Please describe your issue in detail."
            android:textSize="13.3sp"
            android:textColor="#1c275b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:textColor="#994f5eab"
            android:textSize="10.7sp"
            android:textStyle="normal"
            tools:text="Your privacy is our top priority. These feedback do not contain  any personally identifiable information." />
        <RelativeLayout
            android:layout_marginBottom="@dimen/_20sdp"
            android:id="@+id/signupActivity"
            android:background="@drawable/btn_bg_gray"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-medium"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>