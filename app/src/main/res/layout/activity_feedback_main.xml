<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UI.Feedback.FeedbackMainActivity">
    <RelativeLayout
        android:id="@+id/tool_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/blue"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/back_btn"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="3.3sp"
                android:text="Feedback"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="17.3sp"
                android:textStyle="normal" />

        </RelativeLayout>


    </RelativeLayout>
    <LinearLayout

        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_20sdp">
        <TextView
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="#1c275b"
            android:lineSpacingExtra="3.7sp"
            android:text="What would you like us to improve?"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/connect_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2.7sp"
                android:text="Connection Problem"
                android:textColor="#1c275b"
                android:textSize="13.3sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_next_fee_ic"
                app:tint="@color/blue" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_slow_speed_ic" />
            <TextView
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="13.3sp"
                android:textColor="#1c275b"
                android:lineSpacingExtra="2.7sp"
                android:text="Slow speed"/>

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_next_fee_ic"
                app:tint="@color/blue" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/auto_dis_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2.7sp"
                android:text="Auto disconnected"
                android:textColor="#1c275b"
                android:textSize="13.3sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_next_fee_ic"
                app:tint="@color/blue" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_netflix_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2.7sp"
                android:text="Netflix / Streaming"
                android:textColor="#1c275b"
                android:textSize="13.3sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_next_fee_ic"
                app:tint="@color/blue" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_sub_plan_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2.7sp"
                android:text="Subscription / Payment"
                android:textColor="#1c275b"
                android:textSize="13.3sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_next_fee_ic"
                app:tint="@color/blue" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_other_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2.7sp"
                android:text="Others"
                android:textColor="#1c275b"
                android:textSize="13.3sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_next_fee_ic"
                app:tint="@color/blue" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>