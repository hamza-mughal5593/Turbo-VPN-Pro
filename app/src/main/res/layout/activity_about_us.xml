<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UI.AboutUsActivity">
    <RelativeLayout
        android:id="@+id/tool_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/blue"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginStart="@dimen/_20sdp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"/>

            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="3.3sp"
                android:text="About us"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="17.3sp"
                android:textStyle="normal" />

        </RelativeLayout>


    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/about_ic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_30sdp"/>
    <TextView
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="wrap_content"
android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif"

        android:textStyle="normal"

        android:textSize="22sp"

        android:textColor="#4f5eab"

        android:lineSpacingExtra="4.7sp"

        android:text="Turbo VPN"/>
    <TextView

        android:layout_marginTop="@dimen/_10sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:fontFamily="sans-serif"

        android:textStyle="normal"

        android:textSize="16sp"

        android:textColor="#4f5eab"

        android:lineSpacingExtra="3.3sp"

        android:text="V 3.9.1"/>


    <TextView
android:layout_marginTop="@dimen/_30sdp"
android:layout_marginStart="@dimen/_20sdp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:fontFamily="sans-serif"

        android:textStyle="normal"

        android:textSize="14.7sp"

        android:textColor="#1c275b"

        android:lineSpacingExtra="3sp"

        android:text="Check for Updates"/>
    <View
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#504f5eab"/>
    <TextView
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:fontFamily="sans-serif"

        android:textStyle="normal"

        android:textSize="14.7sp"

        android:textColor="#1c275b"

        android:lineSpacingExtra="3sp"

        android:text="Term of Services"/>
    <View
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#504f5eab"/>
    <TextView
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:fontFamily="sans-serif"

        android:textStyle="normal"

        android:textSize="14.7sp"

        android:textColor="#1c275b"

        android:lineSpacingExtra="3sp"

        android:text="Privacy Policy"/>
</LinearLayout>