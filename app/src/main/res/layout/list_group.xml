<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

android:id="@+id/parent_main"

    android:padding="5dp">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/flag_ic"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/flag_ic"/>

            <TextView
                android:layout_toEndOf="@+id/flag_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblListHeader"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="13.3sp"
                android:textColor="#4f5eab"
                android:lineSpacingExtra="2.7sp"
                android:text="United Kingdom"/>
            <TextView
android:layout_below="@+id/lblListHeader"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/flag_ic"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="10sp"
                android:textColor="#4f5eab"
                android:lineSpacingExtra="2.3sp"

                android:text="2 locations"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/arrow"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/arrow_down"/>
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>