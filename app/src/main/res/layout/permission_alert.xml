<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingEnd="@dimen/_10sdp"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_20sdp">

    <TextView

        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-medium"

        android:textStyle="bold"

        android:textSize="16sp"

        android:textColor="#1c275b"

        android:lineSpacingExtra="5.7sp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Connection Request"/>
    <TextView

        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:textStyle="normal"

        android:textSize="13.3sp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:textColor="#1c275b"
        android:layout_marginTop="@dimen/_20sdp"
        android:lineSpacingExtra="4.3sp"
        android:text="Turbo VPN Lite wants to set up a VPN connection

that allows it to monitor network traffic. Only

accept if you trust the source."/>

    <LinearLayout
        android:paddingEnd="@dimen/_20sdp"
        android:paddingStart="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">
<ImageView
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_width="@dimen/_20sdp"
    android:layout_height="@dimen/_20sdp"
    android:src="@drawable/key_ic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="12.7sp"
            android:textColor="#1c275b"
            android:lineSpacingExtra="2.7sp"
            android:text="appears at the top of your screen when\n
VPN is active."/>



    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="match_parent"
android:id="@+id/done_btn"
            android:layout_height="@dimen/_30sdp"

            android:fontFamily="sans-serif-medium"

            android:textStyle="normal"

            android:textSize="14.3sp"

            android:textColor="#ffffff"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:backgroundTint="@color/blue"
            android:lineSpacingExtra="3sp"
            android:background="@drawable/btn_bg_gray"
            android:text="Done"/>

