<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingEnd="@dimen/_10sdp"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_20sdp">

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-medium"

        android:textStyle="bold"

        android:textSize="16sp"

        android:textColor="#1c275b"

        android:lineSpacingExtra="5.7sp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Do you want to disconnect?"/>
    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:textStyle="normal"

        android:textSize="13.3sp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:textColor="#1c275b"
        android:layout_marginTop="@dimen/_20sdp"
        android:lineSpacingExtra="4.3sp"
        android:text="After disconnected, you will lost the privacy
protection."/>
    <LinearLayout
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="match_parent"
            android:id="@+id/cancel_button"
            android:layout_height="@dimen/_30sdp"
android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
android:layout_marginEnd="@dimen/_10sdp"
            android:textStyle="normal"

            android:textSize="14.3sp"

            android:textColor="@color/blue"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:backgroundTint="#f0f0f0"
            android:lineSpacingExtra="3sp"
            android:background="@drawable/btn_bg_gray"
            android:text="Cancel"/>

        <TextView

            android:layout_width="match_parent"
            android:id="@+id/disconnect_btn"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textStyle="normal"

            android:textSize="14.3sp"

            android:textColor="@color/white"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:backgroundTint="@color/blue"
            android:lineSpacingExtra="3sp"
            android:background="@drawable/btn_bg_gray"
            android:text="Disconnect"/>

    </LinearLayout>


</LinearLayout>